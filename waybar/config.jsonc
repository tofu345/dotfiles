{
    "layer": "top",
    "position": "top",
    "spacing": 4,
    "margin": "3 3 3 3",
    "height": 23,
    "ipc": true,
    "exclusive": false,
    "fixed-center": false,

    // * Modules

    "modules-left": [
        "sway/workspaces",
        // "sway/window", /* window#waybar.stacked, tabbed and tiled css classes don't work https://github.com/Alexays/Waybar/issues/1399 */
        "sway/scratchpad",
        "sway/mode"
    ],
    "modules-center": [
    ],
    "modules-right": [
        // "mpris",
        "tray",
        "wireplumber",
        "cpu",
        // "temperature",
        "load",
        "memory",
        "network",
        "battery",
        // "custom/powermode"
        "clock",
        "custom/notification"
    ],

    // * Configuration

    "sway/workspaces": {
        "all-outputs": false,
        "enable-bar-scroll": false,
        "disable-scroll": true,
        "disable-scroll-wraparound": true,
        "format": "{name}",
    },

    "sway/scratchpad": {
        "format": "{icon}",
        "show-empty": false,
        "format-icons": ["üóï"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },

    "wireplumber": {
        "scroll-step": 5, // %, can be a float
        "format": "Û∞éá {volume}%",
        "format-muted": "<span color='gray'>Û∞éá {volume}%</span>",
        // "format-muted": "Û∞ùü {volume}%",
        // "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-click-right": "swaymsg exec -- alacritty -e alsamixer"
    },

    "mpris": {
        "max-length": 70,
        "format-playing": "Û∞ùö {dynamic}",
        "format-paused": "Ó´ë {dynamic}",
        "format": "{dynamic}",
        "interval": 1,
        // "dynamic-len": 60,
        "dynamic-order": ["title", "artist"],
        // "ignored-players": ["firefox"]
    },

    "battery": {
        "bat": "BAT0",
        // "design-capacity": true,
        "interval": 5,
        "states": {
            "critical": 20
        },
        "format": "{capacity}% {icon}",
        // "format-full": "{icon} {capacity}%",
        "format-charging": "{capacity}% <span color='#33cc33'>{icon}</span>",
        "format-plugged": "{capacity}% <span color='#0099ff'>{icon}</span>",
        "format-not-charging": "{capacity}% <span color='#0099ff'>{icon}</span>",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"], // Ôá¶
        "max-length": 25
    },

    "tray": {
        "icon-size": 13,
        "spacing": 10,
        "show-passive-items": true
    },

    "load": {
        "format": "Ôãõ {}",
        "states": {
            "warning": 5,
            "critical": 8
        }
    },

    "memory": {
        "interval": 1,
        "states": {
            "warning": 75,
            "critical": 90
        },
        "format": "ÔÉâ {percentage}%",
        "tooltip-format": "{used:0.1f}G / {total:0.1f}G",
        "max-length": 100
    },

    "cpu": {
        "interval": 1,
        "format": "{icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}",
        "format-icons": [
            "‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ",
            "<span color='#ffece6'>‚ñÖ</span>", // orange
            "<span color='#ff9977'>‚ñÜ</span>", //   |
            "<span color='#e68165'>‚ñá</span>", //   V
            "<span color='#dd532e'>‚ñà</span>"  //  red
        ]
    },

    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        // "on-click": "swaymsg exec gnome-calendar",
        "format": "{:%a %d %b %H:%M}"
    },

    "network": {
        "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
        "format": "{ifname}",
        "format-wifi": "{icon} {essid}",
        "format-ethernet": "{ifname} ÔÉÅ ",
        "tooltip-format": "Up: {bandwidthUpBytes}\nDown: {bandwidthDownBytes}\nStrength: {signalStrength}%",
        "format-disconnected": "Û∞Äù Disconnected",
        "on-click": "swaymsg exec -- alacritty -e nmtui"
    },

    // "custom/powermode": {
    //     "format": "{}",
    //     "exec": "$HOME/.dotfiles/waybar/scripts/powermode_indicator.sh",
    //     "exec-on-event": true,
    //     "on-click": "$HOME/.dotfiles/bin/powermode next",
    //     "interval": "once",
    //     "tooltip": false
    // }

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },

    "temperature": {
        "interval": 5,
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C",
        "tooltip": false
    }
}
